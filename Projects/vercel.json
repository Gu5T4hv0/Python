{
  "version": 2,
  "builds": [
    { "src": "apps/web/package.json", "use": "@vercel/next" },
    { "src": "apps/web/next.config.ts", "use": "@vercel/next" }
  ],
  "installCommand": "cd apps/web && npm install --legacy-peer-deps --no-audit --no-fund",
  "buildCommand": "cd apps/web && npm run build",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD apps/web"
}
